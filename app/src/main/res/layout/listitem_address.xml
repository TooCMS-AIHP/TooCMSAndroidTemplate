<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/clr_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/normal_white_pressed_gray"
            android:orientation="vertical"
            android:padding="30px">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/listitem_address_name"
                    style="@style/style_default_text"
                    android:layout_weight="1"
                    android:text="范冰冰" />

                <TextView
                    android:id="@+id/listitem_address_phone"
                    style="@style/style_default_text"
                    android:layout_width="wrap_content"
                    android:text="18288888888" />
            </LinearLayout>

            <TextView
                android:id="@+id/listitem_address"
                style="@style/style_default_sub_text"
                android:layout_marginTop="25px"
                android:text="天津市河北区君临天下1710" />
        </LinearLayout>

        <View style="@style/divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="85px"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/listitem_address_default"
                style="@style/style_default_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/flag_cbox_normal"
                android:gravity="center_vertical"
                android:paddingLeft="25px"
                android:paddingRight="25px"
                android:text="设为默认"
                android:textSize="26px" />

            <View style="@style/weight" />

            <TextView
                android:id="@+id/listitem_address_edit"
                style="@style/style_default_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/flag_address_edit"
                android:gravity="center_vertical"
                android:paddingLeft="25px"
                android:paddingRight="25px"
                android:text="编辑"
                android:textSize="26px" />

            <TextView
                android:id="@+id/listitem_address_delete"
                style="@style/style_default_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/flag_address_delete"
                android:gravity="center_vertical"
                android:paddingLeft="25px"
                android:paddingRight="25px"
                android:text="删除"
                android:textSize="26px" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/listitem_address_occupy"
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:visibility="gone" />
</LinearLayout>