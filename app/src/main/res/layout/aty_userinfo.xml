<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/clr_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:layout_marginTop="20px"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="30px"
        android:paddingRight="30px">

        <TextView
            style="@style/style_default_text"
            android:layout_weight="1"
            android:text="头像" />

        <cn.zero.android.common.view.shapeimageview.CircularImageView
            android:id="@+id/userinfo_head"
            android:layout_width="100px"
            android:layout_height="100px"
            android:src="@drawable/ic_default_head"
            app:siBorderColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15px"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/userinfo_nickname_click"
            android:layout_width="match_parent"
            android:layout_height="95px"
            android:background="@drawable/normal_white_pressed_gray"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="30px"
            android:paddingRight="30px">

            <TextView
                style="@style/style_default_text"
                android:layout_weight="1"
                android:text="昵称" />

            <TextView
                android:id="@+id/userinfo_nickname"
                style="@style/style_default_text"
                android:layout_width="wrap_content"
                android:drawableRight="@drawable/flag_arrow_right"
                android:text="Zero"
                android:textColor="#656565"
                android:textSize="26px" />
        </LinearLayout>

        <View
            style="@style/divider"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px" />

        <TextView
            android:id="@+id/userinfo_editpsd_click"
            style="@style/style_settings_item"
            android:layout_height="95px"
            android:drawableRight="@drawable/flag_arrow_right"
            android:text="修改密码" />

        <View
            style="@style/divider"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px" />

        <LinearLayout
            android:id="@+id/userinfo_phone_click"
            android:layout_width="match_parent"
            android:layout_height="95px"
            android:background="@drawable/normal_white_pressed_gray"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="30px"
            android:paddingRight="30px">

            <TextView
                style="@style/style_default_text"
                android:layout_weight="1"
                android:text="已绑定手机号码" />

            <TextView
                android:id="@+id/userinfo_phone"
                style="@style/style_default_text"
                android:layout_width="wrap_content"
                android:drawableRight="@drawable/flag_arrow_right"
                android:text="13487898765"
                android:textColor="#656565"
                android:textSize="26px" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>