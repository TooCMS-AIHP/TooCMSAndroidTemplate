<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingBottom="30px"
    android:paddingTop="30px">

    <cn.zero.android.common.view.FrameImageView
        android:id="@+id/listitem_confirm_order_image"
        android:layout_width="120px"
        android:layout_height="120px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="25px"
        android:orientation="vertical">

        <TextView
            android:id="@+id/listitem_confirm_order_name"
            style="@style/style_default_text"
            android:singleLine="true"
            android:text="进口良品父子奶可靠的附件"
            android:textSize="26px" />

        <View style="@style/weight" />

        <TextView
            android:id="@+id/listitem_confirm_order_price"
            style="@style/style_default_text"
            android:singleLine="true"
            android:text="￥14.00"
            android:textColor="#656565"
            android:textSize="26px" />

        <View style="@style/weight" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/listitem_confirm_order_spec"
                style="@style/style_default_text"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="规格：500g"
                android:textColor="#656565"
                android:textSize="26px" />

            <TextView
                android:id="@+id/listitem_confirm_order_num"
                style="@style/style_default_text"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:text="×2"
                android:textColor="#656565"
                android:textSize="26px" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>