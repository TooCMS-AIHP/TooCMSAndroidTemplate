<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/clr_bg"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="160px"
            android:src="@drawable/ic_login_logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="160px"
            android:orientation="vertical"
            android:paddingLeft="65px"
            android:paddingRight="65px">

            <EditText
                android:id="@+id/register_psd"
                style="@style/style_default_text"
                android:background="@color/transparent"
                android:drawableLeft="@drawable/flag_register_psd"
                android:drawablePadding="25px"
                android:hint="请输入密码"
                android:padding="15px"
                android:password="true"
                android:singleLine="true" />

            <View
                style="@style/divider"
                android:background="#D3D3D3" />

            <EditText
                android:id="@+id/register_repsd"
                style="@style/style_default_text"
                android:layout_marginTop="45px"
                android:background="@color/transparent"
                android:drawableLeft="@drawable/flag_register_repsd"
                android:drawablePadding="25px"
                android:hint="请再次输入密码"
                android:padding="15px"
                android:password="true"
                android:singleLine="true" />

            <View
                style="@style/divider"
                android:background="#D3D3D3" />

            <cn.zero.android.common.view.FButton
                android:id="@+id/register"
                style="@style/style_default_fbtn"
                android:layout_marginBottom="80px"
                android:layout_marginTop="80px"
                android:text="注册" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>